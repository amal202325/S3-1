        <script>
           function afficher() { 
                    document.getElementById("result").value+=event.target.id ;
            }
            function effacer(){ 
                    document.getElementById("result").value = "" ;
            }
            function calcul(){
                document.getElementById("result").value=
                eval(document.getElementById("result").value);            
            }
            
        </script>
